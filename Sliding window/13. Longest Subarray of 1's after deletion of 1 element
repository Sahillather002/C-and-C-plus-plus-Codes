class Solution {
public:
    int longestSubarray(vector<int>& nums) {
        int ans=0,i=0,j=0,n=nums.size();
        int zeroes=0;
        while(j<n){
            if(nums[j]==0)zeroes++;
            while(zeroes>1){
                if(nums[i]==0)zeroes--;
                i++;
            }
            ans=max(ans,j-i);
            j++;
        }
        return ans;
    }
};
